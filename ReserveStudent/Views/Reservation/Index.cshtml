@model IEnumerable<ReserveStudent.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">List des reservations</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a class="invisible" asp-action="Create">Create New</a>
    </p>
}
else
{
    <p>
        <a  asp-action="Create" class="btn btn-outline-primary" >Create New</a>
    </p>
}
 
<form class="form-inline my-2 my-lg-2" asp-action="Search" asp-controller="Reservation">
    <input class="form-control mr-sm-2" name="term" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>
<table  class="table  table-dark table-hover  " >
    <thead class="table-primary ">
        <tr>
            <th class="bg-primary d-none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="bg-primary" >
              First Name
            </th>
            <th class="bg-primary">
              Last name
            </th>
            <th class="bg-primary">
               Date
            </th>
            <th class="bg-primary">
                type reservation
            </th>
            <th class="bg-primary">
               Status
            </th>
            <th class="bg-primary"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="d-none">
                    @Html.DisplayFor(modelItem => item.Id) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestingStudent.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestingStudent.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationType.NameType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Review", "Review", new { id = item.Id }) |


                </td>
            </tr>
        }
    </tbody>
</table>
 
